<h1>Member Accounts</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Address</th>
      <th>Picture</th>
      <th>Marital status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member_accounts.each do |member_account| %>
      <tr>
        <td><%= member_account.first_name %></td>
        <td><%= member_account.last_name %></td>
        <td><%= member_account.age %></td>
        <td><%= member_account.date_of_birth %></td>
        <td><%= member_account.gender %></td>
        <td><%= member_account.address %></td>
        <td><%= member_account.picture %></td>
        <td><%= member_account.marital_status %></td>
        <td><%= member_account.user_id %></td>
        <td><%= link_to 'Show', member_account %></td>
        <td><%= link_to 'Edit', edit_member_account_path(member_account) %></td>
        <td><%= link_to 'Destroy', member_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% unless current_user.member_account %>
	<%= link_to 'New Member', new_member_account_path %>
<% end %>
